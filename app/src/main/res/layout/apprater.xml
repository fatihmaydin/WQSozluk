<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:background="?customAndroidlistlistTabBackColorAttribute"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dialogtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Rate APP"
        android:background="?customAndroidlistlistTabBackColorAttribute"
        android:textColor="?customAndroidExpTextViewTextColorAttribute"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Do you want to rate app"
        android:textColor="?customAndroidExpTextViewTextColorAttribute"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?customAndroidlistlistViewBackColor2Attribute"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:background="?customAndroidBackAttributeColor"
            android:clickable="true"
            android:text="Erê"
            android:textColor="?customAndroidExpTextViewTextColorAttribute"

            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_later"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:background="?customAndroidBackAttributeColor"
            android:textColor="?customAndroidExpTextViewTextColorAttribute"

            android:clickable="true"
            android:text="BiBîr bîne"

            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_no"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:clickable="true"
            android:text="Na, Spas"

            android:background="?customAndroidBackAttributeColor"
            android:textColor="?customAndroidExpTextViewTextColorAttribute"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>