<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?customAndroidlistlistViewBackColor1Attribute"
    android:orientation="vertical" >

    <LinearLayout android:layout_height="60dp"
        android:layout_width="match_parent"
        android:background="?customAndroidlistlistTabBackColorAttribute"
        >
        <ImageButton
            android:id="@+id/buttonBack"
            android:background="?customAndroidDrawableAttribute"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/buttonback"/>
        <ImageView
            android:id="@+id/buttonHome"
            android:background="?customAndroidDrawableAttribute"
            android:layout_width="50dp"
            android:layout_height="match_parent"

            android:src="@drawable/wqferheng"/>
    </LinearLayout>


    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:background="?customAndroidlistlistViewBackColor2Attribute"

                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:background="?customAndroidBackAttributeColor"
                android:layout_height="fill_parent" >

                <ListView
                    android:id="@+id/listwordType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?customAndroidViewTextColorAttribute"
                    android:layout_marginBottom="3dp"
                    android:dividerHeight="2.0sp" >
                </ListView>

                <ListView
                    android:id="@+id/listalfabe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:textColor="?customAndroidViewTextColorAttribute"
                    android:dividerHeight="2.0sp" >
                </ListView>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>